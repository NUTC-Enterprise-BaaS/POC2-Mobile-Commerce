<?xml version="1.0" encoding="utf-8"?>
<extension version="3.1" type="plugin" group="system" method="upgrade">
	<name>System - Techjoomla Assets Loader</name>
	<author>TechJoomla</author>
	<authorEmail>extensions@techjoomla.com</authorEmail>
	<authorUrl>www.techjoomla.com</authorUrl>
	<copyright>Copyright(C)2012-15 TechJoomla</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<creationDate>12th Feb 2016</creationDate>
	<version>1.7.2</version>
	<description>This plugin loads the necessary CSS and JS for Techjoomla Extensions!</description>
	<files>
		<filename plugin="tjassetsloader">tjassetsloader.php</filename>
		<filename>index.html</filename>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_system_tjassetsloader.ini</language>
	</languages>
	<config name="params">
		<fields name="params">
			<fieldset name="basic">
				<field name="fix_js" type="radio" default="1" label="PLG_SYS_TECHJOOMLA_API_FIX_JS" description="PLG_SYS_TECHJOOMLA_API_FIX_JS_DESC">
					<option value="0">PLG_SYS_TECHJOOMLA_API_NO</option>
					<option value="1">PLG_SYS_TECHJOOMLA_API_YES</option>
				</field>
				<field name="headtag_position" type="radio" default="1" label="PLG_SYS_TECHJOOMLA_API_MOD_HEAD_TAG_POS_LBL" description="PLG_SYS_TECHJOOMLA_API_MOD_HEAD_TAG_POS_DESC">
					<option value="0">PLG_SYS_TECHJOOMLA_API_MOD_HEAD_TAG_END</option>
					<option value="1">PLG_SYS_TECHJOOMLA_API_MOD_HEAD_TAG_START</option>
				</field>
				<field name="force_js_load" type="radio" default="1" label="PLG_SYS_TECHJOOMLA_API_FORCE_JS_LOAD" description="PLG_SYS_TECHJOOMLA_API_FORCE_JS_LOAD_DESC">
					<option value="0">PLG_SYS_TECHJOOMLA_API_NO</option>
					<option value="1">PLG_SYS_TECHJOOMLA_API_YES</option>
				</field>

				<field name="loadBsRelatedFiles" type="radio" default="1" label="PLG_SYS_TECHJOOMLA_API_LOAD_BS_CSSFILE" description="PLG_SYS_TECHJOOMLA_API_LOAD_BS_CSSFILE_DESC">
					<option value="0">PLG_SYS_TECHJOOMLA_API_NO</option>
					<option value="1">PLG_SYS_TECHJOOMLA_API_YES</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
