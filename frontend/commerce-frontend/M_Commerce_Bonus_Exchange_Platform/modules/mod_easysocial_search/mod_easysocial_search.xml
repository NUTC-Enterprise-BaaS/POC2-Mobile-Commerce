<?xml version="1.0" encoding="utf-8"?>
<extension version="3.1" type="module" client="site" method="upgrade">
	<name>EasySocial Search</name>
	<author>Stack Ideas Sdn Bhd</author>
	<creationDate>25th May 2016</creationDate>
	<copyright>Copyright (C) 2009 - 2013 Stack Ideas Sdn Bhd. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>support@stackideas.com</authorEmail>
	<authorUrl>http://stackideas.com</authorUrl>
	<version>1.4.10</version>
	<description><![CDATA[MOD_EASYSOCIAL_SEARCH_DESC]]></description>
	<files>
		<folder>scripts</folder>
		<folder>styles</folder>
		<folder>tmpl</folder>
		<filename>index.html</filename>
		<filename module="mod_easysocial_search">mod_easysocial_search.php</filename>
		<filename>mod_easysocial_search.xml</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.mod_easysocial_search.ini</language>
		<language tag="en-GB">en-GB.mod_easysocial_search.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="showadvancedlink" type="list" class="input-mini text-center" default="1" label="MOD_EASYSOCIAL_SEARCH_SHOW_ADVANCED_SEARCH_LINK" description="MOD_EASYSOCIAL_SEARCH_SHOW_ADVANCED_SEARCH_LINK_DESC">
					<option value="1">MOD_EASYSOCIAL_SEARCH_YES</option>
					<option value="0">MOD_EASYSOCIAL_SEARCH_NO</option>
				</field>
			</fieldset>
			<fieldset name="advanced">
				<field name="layout" type="modulelayout" label="JFIELD_ALT_LAYOUT_LABEL" description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
				<field name="moduleclass_sfx" type="textarea" rows="3" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				<field name="cache" type="list" default="0" label="COM_MODULES_FIELD_CACHING_LABEL" description="COM_MODULES_FIELD_CACHING_DESC">
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
			</fieldset>
		</fields>
	</config>

</extension>
