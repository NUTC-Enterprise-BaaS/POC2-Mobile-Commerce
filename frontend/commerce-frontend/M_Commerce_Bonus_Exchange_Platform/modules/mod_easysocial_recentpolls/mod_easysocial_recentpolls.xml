<?xml version="1.0" encoding="utf-8"?>
<extension version="3.1" type="module" client="site" method="upgrade">
	<name>EasySocial Recent Polls</name>
	<author>StackIdeas</author>
	<creationDate>25th May 2016</creationDate>
	<copyright>Copyright (C) 2009 - 2014 Stack Ideas Sdn Bhd. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>support@stackideas.com</authorEmail>
	<authorUrl>http://stackideas.com</authorUrl>
	<version>1.4.10</version>
	<description><![CDATA[MOD_EASYSOCIAL_RECENTPOLLS_DESC]]></description>
	<files>
		<folder>styles</folder>
		<folder>tmpl</folder>
		<filename>helper.php</filename>
		<filename module="mod_easysocial_recentpolls">mod_easysocial_recentpolls.php</filename>
		<filename>mod_easysocial_recentpolls.xml</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.mod_easysocial_recentpolls.ini</language>
		<language tag="en-GB">en-GB.mod_easysocial_recentpolls.sys.ini</language>
	</languages>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="display_limit" type="text" default="5" class="input-mini text-center" label="MOD_EASYSOCIAL_RECENTPOLLS_DISPLAY_LIMIT" description="MOD_EASYSOCIAL_RECENTPOLLS_DISPLAY_LIMIT_DESC" />
				<field name="display_pollitems" type="radio" class="btn-group" default="1" label="MOD_EASYSOCIAL_RECENTPOLLS_DISPLAY_POLLITEMS" description="MOD_EASYSOCIAL_RECENTPOLLS_DISPLAY_POLLITEMS_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="display_pollitems_scorebar" type="radio" class="btn-group" default="1" label="MOD_EASYSOCIAL_RECENTPOLLS_DISPLAY_POLLITEMS_SCOREBAR" description="MOD_EASYSOCIAL_RECENTPOLLS_DISPLAY_POLLITEMS_SCOREBAR_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="display_author" type="radio" class="btn-group" default="1" label="MOD_EASYSOCIAL_RECENTPOLLS_DISPLAY_AUTHOR" description="MOD_EASYSOCIAL_RECENTPOLLS_DISPLAY_AUTHOR_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="display_createdate" type="radio" class="btn-group" default="1" label="MOD_EASYSOCIAL_RECENTPOLLS_DISPLAY_CREATEDATE" description="MOD_EASYSOCIAL_RECENTPOLLS_DISPLAY_CREATEDATE_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
			</fieldset>
			<fieldset name="advanced">
				<field name="layout" type="modulelayout" label="JFIELD_ALT_LAYOUT_LABEL" description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
				<field name="moduleclass_sfx" type="textarea" rows="3" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				<field name="cache" type="list" default="0" label="COM_MODULES_FIELD_CACHING_LABEL" description="COM_MODULES_FIELD_CACHING_DESC">
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
