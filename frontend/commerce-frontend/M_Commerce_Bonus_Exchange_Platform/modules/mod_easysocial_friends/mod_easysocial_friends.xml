<?xml version="1.0" encoding="utf-8"?>
<extension version="3.1" type="module" client="site" method="upgrade">
	<name>EasySocial Friends</name>
	<author>Stack Ideas Sdn Bhd</author>
	<creationDate>25th May 2016</creationDate>
	<copyright>Copyright (C) 2009 - 2013 Stack Ideas Sdn Bhd. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>support@stackideas.com</authorEmail>
	<authorUrl>http://stackideas.com</authorUrl>
	<version>1.4.10</version>
	<description><![CDATA[MOD_EASYSOCIAL_FRIENDS_DESC]]></description>
	<files>
		<folder>styles</folder>
		<folder>tmpl</folder>
		<filename>index.html</filename>
		<filename module="mod_easysocial_friends">mod_easysocial_friends.php</filename>
		<filename>mod_easysocial_friends.xml</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.mod_easysocial_friends.ini</language>
		<language tag="en-GB">en-GB.mod_easysocial_friends.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic" addfieldpath="/administrator/components/com_easysocial/models/fields">
				<field name="limit" type="text" class="input-mini text-center" default="6" label="MOD_EASYSOCIAL_FRIENDS_TOTAL_FRIENDS" description="MOD_EASYSOCIAL_FRIENDS_TOTAL_FRIENDS_DESC" />

				<field name="popover" type="radio" class="btn-group" default="1" label="MOD_EASYSOCIAL_FRIENDS_SHOW_PROFILE_HOVER" description="MOD_EASYSOCIAL_FRIENDS_SHOW_PROFILE_HOVER_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="popover_position" type="list" default="top-left" label="MOD_EASYSOCIAL_FRIENDS_TOOLTIP_POSITION" description="MOD_EASYSOCIAL_FRIENDS_TOOLTIP_POSITION_DESC">
					<option value="top">top</option>
					<option value="top-left">top-left</option>
					<option value="top-right">top-right</option>
					<option value="bottom">bottom</option>
					<option value="bottom-left">bottom-left</option>
					<option value="bottom-right">bottom-right</option>
					<option value="left">left</option>
					<option value="left-top">left-top</option>
					<option value="left-bottom">left-bottom</option>
					<option value="right">right</option>
					<option value="right-top">right-top</option>
					<option value="right-bottom">right-bottom</option>
				</field>
				<field name="showall_link" type="radio" class="btn-group" default="1" label="MOD_EASYSOCIAL_FRIENDS_SHOW_ALL_LINK" description="MOD_EASYSOCIAL_FRIENDS_SHOW_ALL_LINK_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
			</fieldset>
			<fieldset name="advanced">
				<field name="layout" type="modulelayout" label="JFIELD_ALT_LAYOUT_LABEL" description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
				<field name="moduleclass_sfx" type="textarea" rows="3" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				<field name="cache" type="list" default="0" label="COM_MODULES_FIELD_CACHING_LABEL" description="COM_MODULES_FIELD_CACHING_DESC">
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
			</fieldset>
		</fields>
	</config>

</extension>
