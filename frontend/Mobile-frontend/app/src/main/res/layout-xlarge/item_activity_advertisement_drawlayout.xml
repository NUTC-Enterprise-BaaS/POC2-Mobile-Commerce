<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_activity_advertisement_drawlayout_content"
    android:layout_width="@dimen/advertisement_drawlayout_width"
    android:layout_height="@dimen/advertisement_drawlayout_heigh"
    android:background="@color/ActivityQRcodeBackgroundColor">

    <ImageView
        android:id="@+id/item_activity_advertisement_drawlayout_icon"
        android:layout_width="@dimen/toolbar_back_image_width"
        android:layout_height="@dimen/toolbar_back_image_height"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/toolbar_back_image_margin_left"
        android:scaleType="center"/>

    <TextView
        android:id="@+id/item_activity_advertisement_drawlayout_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/item_activity_advertisement_drawlayout_icon"
        android:gravity="center"
        android:textColor="@color/ActivityQRcodePageItemTextColor"
        android:textSize="@dimen/toolbar_text_size"/>

</RelativeLayout>