<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/fragment_main_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/fragment_main_menu_margintop"
        android:layout_marginRight="@dimen/fragment_main_menu_margintop"
        android:layout_marginTop="@dimen/fragment_main_menu_marginright"
        android:background="@drawable/meau"
        android:scaleType="centerInside" />

    <ImageView
        android:id="@+id/fragment_main_logo"
        android:layout_width="@dimen/fragment_main_logo_width"
        android:layout_height="@dimen/fragment_main_logo_height"
        android:layout_below="@+id/fragment_main_menu"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ginker_logo"
        android:scaleType="centerInside" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_main_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/fragment_main_content_margintop">

        <RelativeLayout
            android:id="@+id/fragment_main_new"
            android:layout_width="@dimen/fragment_main_new_width"
            android:layout_height="@dimen/fragment_main_new_height"
            android:background="@color/MainFragmentNewsBackground">

            <ImageView
                android:id="@+id/fragment_main_new_image"
                android:layout_width="@dimen/fragment_main_activity_store_search_width"
                android:layout_height="@dimen/fragment_main_activity_store_search_height"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/fragment_main_new_imageview_marginTop"
                android:background="@drawable/newicon_01"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/fragment_main_new_textview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/fragment_main_new_image"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/news"
                android:textColor="@color/ColorWhite"
                android:textSize="@dimen/fragment_main_activity_news_text" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fragment_main_activity_search"
            android:layout_width="@dimen/fragment_main_new_width"
            android:layout_height="@dimen/fragment_main_activity_search_height"
            android:layout_below="@id/fragment_main_new"
            android:layout_marginTop="@dimen/fragment_main_bottom_margin_height"
            android:background="@color/MainFragmentSearchActivityBackground">

            <ImageView
                android:id="@+id/fragment_main_activity_search_image"
                android:layout_width="@dimen/fragment_main_activity_search_imageview_width"
                android:layout_height="@dimen/fragment_main_activity_search_imageview_height"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/fragment_main_margin"
                android:layout_marginStart="@dimen/fragment_main_margin"
                android:background="@drawable/newicon_03"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/fragment_main_activity_search_textview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_toEndOf="@id/fragment_main_activity_search_image"
                android:layout_toRightOf="@id/fragment_main_activity_search_image"
                android:gravity="center"
                android:text="@string/search"
                android:textColor="@color/ColorWhite"
                android:textSize="@dimen/fragment_main_activity_news_text" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fragment_main_store_search"
            android:layout_width="@dimen/fragment_main_new_width"
            android:layout_height="@dimen/fragment_main_store_search_height"
            android:layout_below="@id/fragment_main_activity_search"
            android:layout_marginTop="@dimen/fragment_main_bottom_margin_height"
            android:background="@color/MainFragmentStoreSearchBackground">

            <ImageView

                android:id="@+id/fragment_main_store_search_image"
                android:layout_width="@dimen/fragment_main_activity_store_search_width"
                android:layout_height="@dimen/fragment_main_activity_store_search_height"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/fragment_main_store_search_marginTop"
                android:background="@drawable/newicon_04"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/fragment_main_store_search_textview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/fragment_main_store_search_image"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/store_search"
                android:textColor="@color/ColorWhite"
                android:textSize="@dimen/fragment_main_activity_news_text" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fragment_main_scan"
            android:layout_width="@dimen/fragment_main_new_width"
            android:layout_height="@dimen/fragment_main_new_height"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/fragment_main_bottom_margin_height"
            android:layout_marginStart="@dimen/fragment_main_bottom_margin_height"
            android:layout_toEndOf="@id/fragment_main_new"
            android:layout_toRightOf="@id/fragment_main_new"
            android:background="@color/MainFragmentScanBackground">

            <ImageView
                android:id="@+id/fragment_main_scan_image"
                android:layout_width="@dimen/fragment_main_activity_store_search_width"
                android:layout_height="@dimen/fragment_main_activity_store_search_height"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/fragment_main_new_imageview_marginTop"
                android:background="@drawable/newicon_02"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/fragment_main_scan_textview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/fragment_main_scan_image"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/scan"
                android:textColor="@color/ColorWhite"
                android:textSize="@dimen/fragment_main_activity_news_text" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fragment_main_bonus_search"
            android:layout_width="@dimen/fragment_main_new_width"
            android:layout_height="@dimen/fragment_main_store_search_height"
            android:layout_below="@id/fragment_main_scan"
            android:layout_marginLeft="@dimen/fragment_main_bottom_margin_height"
            android:layout_marginStart="@dimen/fragment_main_bottom_margin_height"
            android:layout_marginTop="@dimen/fragment_main_bottom_margin_height"
            android:layout_toEndOf="@id/fragment_main_activity_search"
            android:layout_toRightOf="@id/fragment_main_activity_search"
            android:background="@color/MainFragmentBonusSearchBackground">

            <ImageView
                android:id="@+id/fragment_main_store_bonus_search_image"
                android:layout_width="@dimen/fragment_main_activity_store_search_width"
                android:layout_height="@dimen/fragment_main_activity_store_search_height"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/fragment_main_store_search_marginTop"
                android:background="@drawable/newicon_08"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/fragment_main_store_bonus_search_textview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/fragment_main_store_bonus_search_image"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/bonus_search"
                android:textColor="@color/ColorWhite"
                android:textSize="@dimen/fragment_main_activity_news_text" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fragment_main_setting"
            android:layout_width="@dimen/fragment_main_new_width"
            android:layout_height="@dimen/fragment_main_activity_search_height"
            android:layout_below="@id/fragment_main_bonus_search"
            android:layout_marginLeft="@dimen/fragment_main_bottom_margin_height"
            android:layout_marginStart="@dimen/fragment_main_bottom_margin_height"
            android:layout_marginTop="@dimen/fragment_main_bottom_margin_height"
            android:layout_toEndOf="@id/fragment_main_store_search"
            android:layout_toRightOf="@id/fragment_main_store_search"
            android:background="@color/MainFragmentSettingBackground">

            <ImageView
                android:id="@+id/fragment_main_activity_setting"
                android:layout_width="@dimen/fragment_main_activity_search_imageview_width"
                android:layout_height="@dimen/fragment_main_activity_search_imageview_height"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/fragment_main_new_imageview_marginTop"
                android:layout_marginStart="@dimen/fragment_main_new_imageview_marginTop"
                android:background="@drawable/newicon_07"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/fragment_main_activity_setting_textview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_toEndOf="@id/fragment_main_activity_setting"
                android:layout_toRightOf="@id/fragment_main_activity_setting"
                android:gravity="center"
                android:text="@string/setting"
                android:textColor="@color/ColorWhite"
                android:textSize="@dimen/fragment_main_activity_news_text" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fragment_main_special"
            android:layout_width="@dimen/fragment_main_new_width"
            android:layout_height="@dimen/fragment_main_activity_search_height"
            android:layout_below="@id/fragment_main_store_search"
            android:layout_marginTop="@dimen/fragment_main_bottom_margin_height"
            android:background="@color/MainFragmentSpecialBackground">

            <ImageView
                android:layout_width="@dimen/fragment_main_activity_search_imageview_width"
                android:layout_height="@dimen/fragment_main_activity_search_imageview_height"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/fragment_main_margin"
                android:layout_marginStart="@dimen/fragment_main_margin"
                android:background="@drawable/newicon_05"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/fragment_main_activity_special_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/fragment_main_margin"
                android:layout_marginRight="@dimen/fragment_main_margin"
                android:gravity="center"
                android:text="@string/special"
                android:textColor="@color/ColorWhite"
                android:textSize="@dimen/fragment_main_activity_special_text" />

            <TextView
                android:id="@+id/fragment_main_activity_apply_special_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/fragment_main_activity_special_textview"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/fragment_main_activity_special_textview"
                android:layout_toStartOf="@id/fragment_main_activity_special_textview"
                android:gravity="bottom"
                android:text="@string/apply"
                android:textColor="@color/ColorWhite"
                android:textSize="@dimen/fragment_main_activity_apply_special_text" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fragment_main_preferential"
            android:layout_width="@dimen/fragment_main_new_width"
            android:layout_height="@dimen/fragment_main_activity_search_height"
            android:layout_alignEnd="@+id/fragment_main_setting"
            android:layout_alignLeft="@+id/fragment_main_setting"
            android:layout_alignRight="@+id/fragment_main_setting"
            android:layout_alignStart="@+id/fragment_main_setting"
            android:layout_below="@id/fragment_main_setting"
            android:layout_marginTop="@dimen/fragment_main_bottom_margin_height"
            android:layout_toEndOf="@id/fragment_main_special"
            android:layout_toRightOf="@id/fragment_main_special"
            android:background="@color/MainFragmentPreferentialBackground">

            <ImageView
                android:layout_width="@dimen/fragment_main_activity_search_imageview_width"
                android:layout_height="@dimen/fragment_main_activity_search_imageview_height"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/fragment_main_margin"
                android:layout_marginStart="@dimen/fragment_main_margin"
                android:background="@drawable/newicon_06"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/fragment_main_activity_preferential_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/fragment_main_margin"
                android:layout_marginRight="@dimen/fragment_main_margin"
                android:gravity="center"
                android:text="@string/preferential"
                android:textColor="@color/ColorWhite"
                android:textSize="@dimen/fragment_main_activity_special_text" />

            <TextView
                android:id="@+id/fragment_main_activity_apply_preferential_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/fragment_main_activity_preferential_textview"
                android:layout_toLeftOf="@id/fragment_main_activity_preferential_textview"
                android:layout_toStartOf="@id/fragment_main_activity_preferential_textview"
                android:gravity="bottom"
                android:text="@string/apply"
                android:textColor="@color/ColorWhite"
                android:textSize="@dimen/fragment_main_activity_apply_special_text" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fragment_main_enter_special"
            android:layout_width="@dimen/fragment_main_new_width"
            android:layout_height="@dimen/fragment_main_activity_search_height"
            android:layout_below="@id/fragment_main_store_search"
            android:layout_marginTop="@dimen/fragment_main_bottom_margin_height"
            android:background="@color/MainFragmentSpecialBackground">

            <ImageView
                android:layout_width="@dimen/fragment_main_activity_search_imageview_width"
                android:layout_height="@dimen/fragment_main_activity_search_imageview_height"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/fragment_main_margin"
                android:layout_marginStart="@dimen/fragment_main_margin"
                android:background="@drawable/newicon_05"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/fragment_main_activity_special_textview_enter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/fragment_main_margin"
                android:layout_marginRight="@dimen/fragment_main_margin"
                android:gravity="center"
                android:text="@string/special"
                android:textColor="@color/ColorWhite"
                android:textSize="@dimen/fragment_main_activity_special_text" />

            <TextView
                android:id="@+id/fragment_main_activity_enter_special_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/fragment_main_activity_special_textview_enter"
                android:layout_toLeftOf="@id/fragment_main_activity_special_textview_enter"
                android:layout_toStartOf="@id/fragment_main_activity_special_textview_enter"
                android:gravity="bottom"
                android:text="@string/enter"
                android:textColor="@color/ColorWhite"
                android:textSize="@dimen/fragment_main_activity_apply_special_text" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fragment_main_enter_preferential"
            android:layout_width="@dimen/fragment_main_new_width"
            android:layout_height="@dimen/fragment_main_activity_search_height"
            android:layout_alignEnd="@+id/fragment_main_setting"
            android:layout_alignLeft="@+id/fragment_main_setting"
            android:layout_alignRight="@+id/fragment_main_setting"
            android:layout_alignStart="@+id/fragment_main_setting"
            android:layout_below="@id/fragment_main_setting"
            android:layout_marginTop="@dimen/fragment_main_bottom_margin_height"
            android:layout_toEndOf="@id/fragment_main_special"
            android:layout_toRightOf="@id/fragment_main_special"
            android:background="@color/MainFragmentPreferentialBackground">

            <ImageView
                android:layout_width="@dimen/fragment_main_activity_search_imageview_width"
                android:layout_height="@dimen/fragment_main_activity_search_imageview_height"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/fragment_main_margin"
                android:layout_marginStart="@dimen/fragment_main_margin"
                android:background="@drawable/newicon_06"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/fragment_main_activity_preferential_textview_enter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/fragment_main_margin"
                android:layout_marginRight="@dimen/fragment_main_margin"
                android:gravity="center"
                android:text="@string/preferential"
                android:textColor="@color/ColorWhite"
                android:textSize="@dimen/fragment_main_activity_special_text" />

            <TextView
                android:id="@+id/fragment_main_activity_enter_preferential_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/fragment_main_activity_preferential_textview_enter"
                android:layout_toLeftOf="@id/fragment_main_activity_preferential_textview_enter"
                android:layout_toStartOf="@id/fragment_main_activity_preferential_textview_enter"
                android:gravity="bottom"
                android:text="@string/enter"
                android:textColor="@color/ColorWhite"
                android:textSize="@dimen/fragment_main_activity_apply_special_text" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fragment_main_check_special"
            android:layout_width="@dimen/fragment_main_new_width"
            android:layout_height="@dimen/fragment_main_activity_search_height"
            android:layout_below="@id/fragment_main_store_search"
            android:layout_marginTop="@dimen/fragment_main_bottom_margin_height"
            android:background="@color/MainFragmentSpecialBackground">

            <TextView
                android:id="@+id/fragment_main_activity_special_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/check"
                android:textColor="@color/ColorWhite"
                android:textSize="@dimen/fragment_main_activity_special_text" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fragment_main_check_preferential"
            android:layout_width="@dimen/fragment_main_new_width"
            android:layout_height="@dimen/fragment_main_activity_search_height"
            android:layout_alignEnd="@+id/fragment_main_setting"
            android:layout_alignLeft="@+id/fragment_main_setting"
            android:layout_alignRight="@+id/fragment_main_setting"
            android:layout_alignStart="@+id/fragment_main_setting"
            android:layout_below="@id/fragment_main_setting"
            android:layout_marginTop="@dimen/fragment_main_bottom_margin_height"
            android:layout_toEndOf="@id/fragment_main_special"
            android:layout_toRightOf="@id/fragment_main_special"
            android:background="@color/MainFragmentPreferentialBackground">

            <TextView
                android:id="@+id/fragment_main_activity_preferential_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/check"
                android:textColor="@color/ColorWhite"
                android:textSize="@dimen/fragment_main_activity_special_text" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>