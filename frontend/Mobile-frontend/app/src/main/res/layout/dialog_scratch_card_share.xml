<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_normal_point_background">

    <RelativeLayout
        android:layout_width="@dimen/fragment_normal_point_dialog_background_width"
        android:layout_height="@dimen/fragment_normal_point_dialog_check_background_height"
        android:layout_centerInParent="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="@dimen/fragment_normal_point_dialog_check_background_height">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/dialog_scratch_card_share_title"
                    android:layout_width="@dimen/fragment_normal_point_dialog_title_text_width"
                    android:layout_height="@dimen/fragment_normal_point_dialog_title_text_height"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/fragment_normal_point_dialog_title_text_margin_top"
                    android:gravity="center"
                    android:text="@string/ScratChcardShareLayout_tittle"
                    android:textColor="@color/MainFragmentNormalPointDialogTextColor"
                    android:textSize="@dimen/fragment_normal_point_dialog_title_text_text_size"/>

                <EditText
                    android:id="@+id/dialog_scratch_card_share_phone"
                    android:layout_width="@dimen/fragment_normal_point_dialog_title_text_width"
                    android:layout_height="@dimen/fragment_normal_point_dialog_title_text_height"
                    android:layout_below="@id/dialog_scratch_card_share_title"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/fragment_normal_point_dialog_edit_margin_top"
                    android:background="@drawable/forgetpassword_pwdinfo_backgroud"
                    android:gravity="center"
                    android:hint="@string/registered_layout_account_phone_hint"
                    android:inputType="phone"
                    android:textColor="@color/MainFragmentNormalPointDialogTextColor"
                    android:textColorHint="@color/ActivityRegisterHintColor"
                    android:textSize="@dimen/fragment_normal_point_dialog_title_text_text_size"/>


                <EditText
                    android:id="@+id/dialog_scratch_card_share_email"
                    android:layout_width="@dimen/fragment_normal_point_dialog_title_text_width"
                    android:layout_height="@dimen/fragment_normal_point_dialog_title_text_height"
                    android:layout_below="@id/dialog_scratch_card_share_phone"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/fragment_normal_point_dialog_edit_margin_top"
                    android:background="@drawable/forgetpassword_pwdinfo_backgroud"
                    android:gravity="center"
                    android:hint="@string/registered_layout_account_email_hint"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/MainFragmentNormalPointDialogTextColor"
                    android:textColorHint="@color/ActivityRegisterHintColor"
                    android:textSize="@dimen/fragment_normal_point_dialog_title_text_text_size"/>


                <Button
                    android:id="@+id/dialog_scratch_card_share_submit"
                    android:layout_width="@dimen/fragment_normal_point_dialog_button_width"
                    android:layout_height="@dimen/fragment_normal_point_dialog_title_text_height"
                    android:layout_alignRight="@id/dialog_scratch_card_share_email"
                    android:layout_below="@id/dialog_scratch_card_share_email"
                    android:layout_marginTop="@dimen/fragment_normal_point_dialog_title_text_margin_top"
                    android:background="@drawable/layout_normal_point_button_background"
                    android:text="@string/opinion_layout_submit"
                    android:textColor="@color/ColorWhite"
                    android:textSize="@dimen/fragment_normal_point_dialog_edit_size"/>

                <Button
                    android:id="@+id/dialog_scratch_card_share_cancel"
                    android:layout_width="@dimen/fragment_normal_point_dialog_button_width"
                    android:layout_height="@dimen/fragment_normal_point_dialog_title_text_height"
                    android:layout_alignLeft="@id/dialog_scratch_card_share_email"
                    android:layout_below="@id/dialog_scratch_card_share_email"
                    android:layout_marginTop="@dimen/fragment_normal_point_dialog_title_text_margin_top"
                    android:background="@drawable/layout_normal_point_button_background"
                    android:text="@string/opinion_layout_cancel"
                    android:textColor="@color/ColorWhite"
                    android:textSize="@dimen/fragment_normal_point_dialog_edit_size"/>

                <View
                    android:id="@+id/dialog_scratch_card_share_scroll"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fragment_normal_point_dialog_title_text_height"
                    android:layout_below="@id/dialog_scratch_card_share_cancel"
                    android:layout_marginTop="@dimen/fragment_normal_point_dialog_title_text_margin_top"
                    android:background="@color/ColorTransparent"/>

            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>