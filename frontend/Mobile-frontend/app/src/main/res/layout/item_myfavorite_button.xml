<?xml version="1.0" encoding="utf-8"?>

<com.herbhousesgobuyother.contrube.model.SwipeMenuLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:paddingBottom="1dp"
    app:ios="false"
    app:leftSwipe="true"
    app:swipeEnable="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/fragment_store_container"
            android:layout_width="@dimen/fragment_myfavorite_item_layout_width"
            android:layout_height="@dimen/fragment_myfavorite_item_layout_height"
            android:layout_marginLeft="@dimen/fragment_myfavorite_item_layout_marginleft"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fragment_name"
                android:layout_width="@dimen/fragment_myfavorite_item_text_width"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/fragment_myfavorite_item_layout_marginleft"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/ColorBlack"
                android:textSize="@dimen/fragment_myfavorite_item_textsize" />

            <TextView
                android:id="@+id/fragment_address"
                android:layout_width="@dimen/fragment_myfavorite_item_text_width"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/fragment_myfavorite_item_layout_marginleft"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="@dimen/fragment_myfavorite_item_textsize" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/fragment_phone"
                    android:layout_width="@dimen/fragment_myfavorite_item_text_width"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="@dimen/fragment_myfavorite_item_textsize" />

                <TextView
                    android:id="@+id/fragment_distance"
                    android:layout_width="@dimen/fragment_myfavorite_item_distance_width"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textSize="@dimen/fragment_myfavorite_item_textsize" />
            </RelativeLayout>
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/fragment_bus_container"
            android:layout_width="@dimen/fragment_myfavorite_item_image_container_width"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/fragment_myfavorite_item_image_marginleft"
            android:background="@color/FragmentContainerColor">

            <ImageView
                android:id="@+id/fragment_bus"
                android:layout_width="@dimen/fragment_myfavorite_item_image_width"
                android:layout_height="@dimen/fragment_myfavorite_item_image_height"
                android:layout_centerInParent="true"
                android:background="@drawable/new_b_x8"
                android:scaleType="centerCrop" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fragment_call_container"
            android:layout_width="@dimen/fragment_myfavorite_item_image_container_width"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/fragment_myfavorite_item_image_marginleft"
            android:layout_toLeftOf="@id/fragment_bus_container"
            android:background="@color/FragmentContainerColor">

            <ImageView
                android:id="@+id/fragment_call"
                android:layout_width="@dimen/fragment_myfavorite_item_image_width"
                android:layout_height="@dimen/fragment_myfavorite_item_image_height"
                android:layout_centerInParent="true"
                android:background="@drawable/bn_26"
                android:scaleType="centerCrop" />
        </RelativeLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/fragment_share_container"
        android:layout_width="@dimen/fragment_myfavorite_item_image_container_width"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:background="@color/FragmentContainerColor">

        <ImageView
            android:id="@+id/fragment_share"
            android:layout_width="@dimen/fragment_myfavorite_item_image_width"
            android:layout_height="@dimen/fragment_myfavorite_item_image_height"
            android:layout_centerInParent="true"
            android:background="@drawable/bn_27"
            android:scaleType="centerCrop" />

    </RelativeLayout>

    <TextView
        android:id="@+id/fragment_delete"
        android:layout_width="@dimen/fragment_myfavorite_item_image_container_width"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/fragment_myfavorite_item_image_marginleft"
        android:background="@color/ColorPremiumTheme"
        android:gravity="center"
        android:text="@string/favorite_layout_delete"
        android:textColor="@color/ColorWhite"
        android:textSize="@dimen/fragment_myfavorite_item_delete_size" />
</com.herbhousesgobuyother.contrube.model.SwipeMenuLayout>